<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>
      <main class="container-fluid">
        <!--Administrador de productos-->
        <br>
        <div class="tablaadmin">
          <h2>Administrador de Productos de parfum l√©gende</h2>
          <a href="/admin/create">
            <ion-icon name="add-circle-outline"></ion-icon>Agregar
          </a>


          <div class="row">



            <table class="tabla" border="1">


              <div class="contenedor">
                <thead>
                  <tr>
                    <th>id</th>

                    <th>Nombre</th>

                    <th>Imagen</th>

                    <th>Ver</th>

                    <th>Editar</th>

                    <th>Eliminar</th>

                  </tr>
                </thead>
                <tbody>
                  <% allProducts.forEach(product=> { %>
                    <tr>
                      <td scope="col"><%= product.id %></td>
                      <td scope="col"><%= product.name%> </td>
                      <td scope="col"><img class="miniatura" src="/images/products/<%= product.image %>" alt="" width="100px" height="100px"> </td>
                      <td><a href="/admin/editdetail/<%= product.id %>">
                          <ion-icon name="eye-outline"></ion-icon>VER
                        </a></td>
                      <td><a href="/admin/edit/<%= product.id %>">
                          <ion-icon name="pencil-outline"></ion-icon>EDITAR
                        </a></td>
                      <td><a href="/admin/delete/<%= product.id %>">
                          <ion-icon name="trash-outline"></ion-icon>ELIMINAR
                        </a></td>

                    </tr>
                    <% }) %>
                </tbody>
              </div>
            </table>


          </div>

        </div>

        <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
      </main>
      <%- include('./partials/footer') %>
  </body>

</html>