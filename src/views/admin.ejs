<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>
      <main class="container-fluid">
        <!--Administrador de productos-->
        <br>
        <div class="tablaadmin">
          <h2>Administrador de Productos</h2>
          <a href="/admin/create">
            <ion-icon name="add-circle-outline"></ion-icon>Agregar
          </a>


          <div class="row">

            <% allProducts.forEach(product=> { %>

              <table class="tabla" border="1">

                <div class = "contenedor"> 
                  <tr>
                    <th>id</th>
  
                    <th>Nombre</th>
  
                    <th>Ver</th>
  
                    <th>Editar</th>
  
                    <th>Eliminar</th>
  
                  </tr>
  
                  <tr>
                    <td scope="col">
                      <%= product.id %>
                    </td>
                    <td scope="col">
                      <%= product.name %>
                    </td>
                    
                    <td><a href="/admin/editdetail/<%= product.id %>">
                        <ion-icon name="eye-outline"></ion-icon>VER
                      </a> </td>
                    <td><a href="/admin/edit/<%= product.id %>">
                        <ion-icon name="pencil-outline"></ion-icon>EDITAR
                      </a></td>
                    <td><a href="/admin/delete/<%= product.id %>">
                        <ion-icon name="trash-outline"></ion-icon>ELIMINAR
                      </a></td>
  
                  </tr>

                </div>

                

              </table>
              <% }) %>

          </div>

        </div>

        <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
      </main>
      <%- include('./partials/footer') %>
  </body>

</html>